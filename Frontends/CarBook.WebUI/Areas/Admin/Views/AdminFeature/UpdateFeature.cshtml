@model UpdateFeatureDto

@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Özellik Güncelleme Sayfası</h4>
                        <p class="card-subtitle mb-4">Araç ile ilgili özelliği giriniz. İşlemden sonra kaydet butonuna tıklayarak güncelleme işlemini tamamlayabilirsiniz..</p>

                        <form method="post">
                            <input type="hidden" asp-for="FeatureID" />
                            <div class="form-group">
                                <label for="exampleInputModel">İsim</label>
                                <input asp-for="Name" type="text" class="form-control" id="exampleInputModel" placeholder="İsim girişi yapınız..." />
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Aracı Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
