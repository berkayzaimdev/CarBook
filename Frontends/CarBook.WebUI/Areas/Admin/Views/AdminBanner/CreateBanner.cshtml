@model CreateBannerDto

@{
    ViewData["Title"] = "CreateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Banner Girişi</h4>
                        <p class="card-subtitle mb-4">Banner'ı girdikten sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz..</p>
                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputModel">Başlık</label>
                                <input asp-for="Title" type="text" class="form-control" id="exampleInputModel" placeholder="İsim girişi yapınız..." />
                            </div>

                            <div class="form-group">
                                <label for="exampleInputModel">Açıklama</label>
                                <input asp-for="Description" type="text" class="form-control" id="exampleInputModel" placeholder="İsim girişi yapınız..." />
                            </div>

                            <div class="form-group">
                                <label for="exampleInputModel">Video Açıklaması</label>
                                <input asp-for="VideoDescription" type="text" class="form-control" id="exampleInputModel" placeholder="İsim girişi yapınız..." />
                            </div>

                            <div class="form-group">
                                <label for="exampleInputModel">Video URL</label>
                                <input asp-for="VideoUrl" type="text" class="form-control" id="exampleInputModel" placeholder="İsim girişi yapınız..." />
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Banner'ı Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>