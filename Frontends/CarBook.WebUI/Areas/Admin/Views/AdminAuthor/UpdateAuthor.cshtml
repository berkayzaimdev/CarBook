@model UpdateAuthorDto

@{
    ViewData["Title"] = "UpdateAuthor";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Yazar Güncelleme Sayfası</h4>
                        <p class="card-subtitle mb-4">Yazar bilgisini girdikten sonra kaydet butonuna tıklayarak güncelleme işlemini tamamlayabilirsiniz..</p>

                        <form method="post">
                            <input type="hidden" asp-for="AuthorID" />

                            <div class="form-group">
                                <label for="exampleInputModel">Ad Soyad</label>
                                <input asp-for="Name" type="text" class="form-control" id="exampleInputModel" placeholder="Başlık girişi yapınız..." />
                            </div>

                            <div class="form-group">
                                <label for="exampleInputModel">Açıklama</label>
                                <input asp-for="Description" type="text" class="form-control" id="exampleInputModel" placeholder="Açıklama girişi yapınız..." />
                            </div>

                            <div class="form-group">
                                <label for="exampleInputModel">Görsel URL</label>
                                <input asp-for="ImageUrl" type="text" class="form-control" id="exampleInputModel" placeholder="Görsel linki girişi yapınız..." />
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Yazarı Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
