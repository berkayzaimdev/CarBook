@model CreateFooterAddressDto

@{
    ViewData["Title"] = "CreateFooterAddress";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Adres Bilgisi Girişi</h4>
                        <p class="card-subtitle mb-4">Adres bilgisini girdikten sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz..</p>
                        <form method="post">


                            <div class="form-group">
                                <label for="exampleInputModel">Ad Soyad</label>
                                <input asp-for="Address" type="text" class="form-control" id="exampleInputModel" placeholder="Başlık girişi yapınız..." />
                            </div>

                            <div class="form-group">
                                <label for="exampleInputModel">Görsel URL</label>
                                <input asp-for="Phone" type="text" class="form-control" id="exampleInputModel" placeholder="Görsel linki girişi yapınız..." />
                            </div>

                            <div class="form-group">
                                <label for="exampleInputModel">Görsel URL</label>
                                <input asp-for="Email" type="text" class="form-control" id="exampleInputModel" placeholder="Görsel linki girişi yapınız..." />
                            </div>

                            <div class="form-group">
                                <label for="exampleInputModel">Açıklama</label>
                                <input asp-for="Description" type="text" class="form-control" id="exampleInputModel" placeholder="Açıklama girişi yapınız..." />
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Adresi Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>