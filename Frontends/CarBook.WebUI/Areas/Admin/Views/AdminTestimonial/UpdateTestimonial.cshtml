@model UpdateTestimonialDto

@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Referans Güncelleme Sayfası</h4>
                        <p class="card-subtitle mb-4">Referans bilgisini girdikten sonra kaydet butonuna tıklayarak güncelleme işlemini tamamlayabilirsiniz..</p>

                        <form method="post">
                            <input type="hidden" asp-for="TestimonialID" />


                            <div class="form-group">
                                <label for="exampleInputModel">Referans Ad Soyad</label>
                                <input asp-for="Name" type="text" class="form-control" id="exampleInputModel" placeholder="Referans Ad Soyad girişi yapınız..." />
                            </div>

                            <div class="form-group">
                                <label for="exampleInputModel">Referans Unvanı</label>
                                <input asp-for="Title" type="text" class="form-control" id="exampleInputModel" placeholder="Referans Unvanı girişi yapınız..." />
                            </div>

                            <div class="form-group">
                                <label for="exampleInputModel">Referans Görsel</label>
                                <input asp-for="ImageUrl" type="text" class="form-control" id="exampleInputModel" placeholder="Görsel URL girişi yapınız..." />
                            </div>

                            <div class="form-group">
                                <label for="exampleInputModel">Referans Yorumu</label>
                                <textarea rows="5" asp-for="Comment" class="form-control" placeholder="Yorumunuzu buraya yazabilirsiniz."></textarea>
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Referansı Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
